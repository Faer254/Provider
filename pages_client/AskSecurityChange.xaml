<Page x:Class="Provider.pages_client.AskSecurityChange"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Provider.pages_client"
      mc:Ignorable="d" 
      d:DesignHeight="253" d:DesignWidth="355"
      FontFamily="/resources/fonts/Nunito-ExtraBold.ttf#Nunito">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Grid.ColumnSpan="2" HorizontalAlignment="Center" FontSize="30" Content="Безопасность" />

        <TextBlock Grid.Row="1" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top"
                   FontSize="20" 
                   TextWrapping="Wrap" 
                   TextAlignment="Center"
                   Foreground="{DynamicResource MaterialDesignBody}"
                   Text="Изменить электронную            почту или пароль" />

        <StackPanel Grid.Row="3" VerticalAlignment="Bottom">
            <Button Grid.Row="1"
                    Margin="5 5 5 0"
                    Height="50"
                    FontSize="18"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Content="ИЗМЕНИТЬ ПОЧТУ"
                    Click="Button_Click" />
            <Button Grid.Row="1"
                    Margin="5"
                    Height="50"
                    FontSize="18"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Content="ИЗМЕНИТЬ ПАРОЛЬ"
                    Click="Button_Click_1" />
        </StackPanel>
    </Grid>
</Page>
