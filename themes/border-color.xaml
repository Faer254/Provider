<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="borderColorStyle" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="#dcdcdc"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsChecked, ElementName=themeToggle}" Value="True">
                <Setter Property="BorderBrush" Value="#494949"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>