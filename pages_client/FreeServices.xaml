<Page x:Class="Provider.pages_client.FreeServices"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Provider.pages_client"
      mc:Ignorable="d"  
      d:DesignHeight="408" d:DesignWidth="527"
      FontFamily="/resources/fonts/Nunito-ExtraBold.ttf#Nunito">

    <Grid Opacity="0.95">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <!--FRAME INTERFACE-->

            <TabControl Grid.ColumnSpan="2" Grid.RowSpan="2">
                <TabItem Header="Подключённые услуги" Height="40">
                    <Grid Margin="0 2 0 0" Grid.ColumnSpan="2" Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBox x:Name="finderTBConnected"
                                 Margin="5 0 0 3" Padding="0"
                                 HorizontalAlignment="Left"
                                 VerticalContentAlignment="Bottom"
                                 Width="200" Height="30"
                                 FontSize="16"
                                 Foreground="{DynamicResource MaterialDesignBody}"
                                 BorderThickness="0 0 0 2"
                                 BorderBrush="{DynamicResource MaterialDesignDivider}"
                                 materialDesign:HintAssist.Hint="Поиск"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 TextChanged="finderTBConnected_TextChanged" />

                        <DataGrid x:Name="dataGridConnected"
                                  Grid.Row="1"
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True" 
                                  SelectionUnit="CellOrRowHeader"
                                  ScrollViewer.CanContentScroll="False"
                                  VerticalScrollBarVisibility="Auto"
                                  CanUserSortColumns="True" 
                                  CanUserReorderColumns="False"
                                  GridLinesVisibility="All"
                                  BorderThickness="2"
                                  materialDesign:DataGridAssist.CornerRadius="5 5 9 9">
                            <DataGrid.Columns>
                                <DataGridTextColumn Visibility="Collapsed"
                                                    Width="auto"
                                                    Binding="{Binding id}" />

                                <DataGridTextColumn Header="Название" 
                                                    Width="*" 
                                                    MinWidth="100" 
                                                    Binding="{Binding service_name}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Описание" 
                                                    Width="2*" 
                                                    MinWidth="100" 
                                                    Binding="{Binding description}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn Width="auto" MinWidth="90">
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                                                        <ContentPresenter />
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                                                <Button x:Name="disConnectButton"
                                                        Padding="5 0 5 0"
                                                        Margin="5 0 5 0"
                                                        FontSize="12"
                                                        Style="{DynamicResource MaterialDesignOutlinedButton}"
                                                        Content="Отключить"
                                                        Click="disConnectButton_Click"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
                <TabItem Header="Больше услуг" Margin="0 0 40 0" Height="40">
                    <Grid Margin="0 2 0 0" Grid.ColumnSpan="2" Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBox x:Name="finderTBUnConnected"
                                 Margin="5 0 0 3" Padding="0"
                                 HorizontalAlignment="Left"
                                 VerticalContentAlignment="Bottom"
                                 Width="200" Height="30"
                                 FontSize="16"
                                 Foreground="{DynamicResource MaterialDesignBody}"
                                 BorderThickness="0 0 0 2"
                                 BorderBrush="{DynamicResource MaterialDesignDivider}"
                                 materialDesign:HintAssist.Hint="Поиск"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 TextChanged="finderTBUnConnected_TextChanged" />

                        <DataGrid x:Name="dataGridUnConnected"
                                  Grid.Row="1"
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True" 
                                  SelectionUnit="CellOrRowHeader"
                                  ScrollViewer.CanContentScroll="False"
                                  VerticalScrollBarVisibility="Auto"
                                  CanUserSortColumns="True" 
                                  CanUserReorderColumns="False"
                                  GridLinesVisibility="All"
                                  BorderThickness="2"
                                  materialDesign:DataGridAssist.CornerRadius="5 5 9 9">
                            <DataGrid.Columns>
                                <DataGridTextColumn Visibility="Collapsed"
                                                    Width="auto"
                                                    Binding="{Binding id}" />

                                <DataGridTextColumn Header="Название" 
                                                    Width="*" 
                                                    MinWidth="100" 
                                                    Binding="{Binding service_name}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Описание" 
                                                    Width="2*" 
                                                    MinWidth="100" 
                                                    Binding="{Binding description}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn Width="auto" MinWidth="90">
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                                                        <ContentPresenter />
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                                                <Button x:Name="connectButton"
                                                        Padding="5 0 5 0"
                                                        Margin="5 0 5 0"
                                                        FontSize="12"
                                                        Style="{DynamicResource MaterialDesignOutlinedButton}"
                                                        Content="Подключить"
                                                        Click="connectButton_Click"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
            </TabControl>

            <!--BACK BUTTON-->
            <Button x:Name="backButton" 
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="5" Padding="5"
                    Height="30"
                    BorderThickness="1"
                    BorderBrush="Gray"
                    Foreground="Gray"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    materialDesign:RippleAssist.Feedback="Gray"
                    Style="{StaticResource MaterialDesignFlatSecondaryButton}"
                    Click="backButton_Click" >
                <Image>
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Source" Value="/resources/images/close-icon.png"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ThemeToggle.IsChecked}" Value="True">
                                    <Setter Property="Source" Value="/resources/images/close-icon-white.png"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </Button>
            <!--BACK BUTTON END-->
            <!--FRAME INTERFACE END-->
        </Grid>
    </Grid>
</Page>
