<Page x:Class="Provider.pages_admin.Employee"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Provider.pages_admin"
      mc:Ignorable="d" 
      d:DesignHeight="409" d:DesignWidth="882"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      FontFamily="/resources/fonts/Nunito-ExtraBold.ttf#Nunito">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
            <TextBox x:Name="finderTB"
                     Margin="5 0 5 3"
                     HorizontalAlignment="Left"
                     VerticalContentAlignment="Bottom"
                     Width="200"
                     FontSize="18"
                     Foreground="{DynamicResource MaterialDesignBody}"
                     BorderThickness="0 0 0 2"
                     BorderBrush="{DynamicResource MaterialDesignDivider}"
                     materialDesign:HintAssist.Hint="Поиск"
                     materialDesign:TextFieldAssist.HasClearButton="True"
                     TextChanged="finderTB_TextChanged" />

            <ComboBox x:Name="roleCB"
                      Margin="5 0 5 3"
                      FontSize="18"
                      Foreground="{DynamicResource MaterialDesignBody}"
                      BorderThickness="0 0 0 2"
                      BorderBrush="{DynamicResource MaterialDesignDivider}" 
                      materialDesign:HintAssist.Hint="Роль"
                      SelectionChanged="roleCB_SelectionChanged" />

            <ComboBox x:Name="statusCB"
                      Margin="5 0 5 3"
                      FontSize="18"
                      Foreground="{DynamicResource MaterialDesignBody}"
                      BorderThickness="0 0 0 2"
                      BorderBrush="{DynamicResource MaterialDesignDivider}" 
                      materialDesign:HintAssist.Hint="Статус"
                      SelectionChanged="statusCB_SelectionChanged" />
        </StackPanel>

        <StackPanel Margin="2" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button x:Name="exportButton" 
                    BorderThickness="1"
                    BorderBrush="Gray"
                    Foreground="{DynamicResource MaterialDesignBody}"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    materialDesign:RippleAssist.Feedback="Gray"
                    Style="{StaticResource MaterialDesignFlatSecondaryButton}"
                    Content="Экспорт в Excel" 
                    Click="exportButton_Click" />

            <Button x:Name="addButton" 
                    Margin="5 0 0 0"
                    BorderThickness="1"
                    BorderBrush="Gray"
                    Foreground="{DynamicResource MaterialDesignBody}"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    materialDesign:RippleAssist.Feedback="Gray"
                    ToolTip="Добавить сотрудника"
                    Style="{StaticResource MaterialDesignFlatSecondaryButton}"
                    Content="Добавить"
                    Click="addButton_Click"/>

        </StackPanel>

        <DataGrid x:Name="dataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  SelectionUnit="CellOrRowHeader"
                  ScrollViewer.CanContentScroll="False"
                  VerticalScrollBarVisibility="Auto"
                  CanUserSortColumns="True" 
                  CanUserReorderColumns="False"
                  GridLinesVisibility="All"
                  BorderThickness="2"
                  materialDesign:DataGridAssist.CornerRadius="5 5 9 9"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  VirtualizingStackPanel.IsVirtualizing="True"
                  VirtualizingStackPanel.VirtualizationMode="Recycling">
            <DataGrid.Columns>
                <DataGridTextColumn Header="id"
                                    Width="auto"
                                    Binding="{Binding id}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Роль"
                                    Width="auto"
                                    Binding="{Binding role_name}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Логин" 
                                    Width="auto" 
                                    MinWidth="50" 
                                    Binding="{Binding login}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Почта" 
                                    Width="auto" 
                                    MinWidth="100" 
                                    Binding="{Binding email}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Телефон" 
                                    Width="auto" 
                                    MinWidth="100" 
                                    Binding="{Binding phone_number}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="ФИО" 
                                    Width="*" 
                                    MinWidth="100" 
                                    Binding="{Binding full_name}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Статус"
                                    Width="auto"
                                    Binding="{Binding status_id}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Width="auto" MinWidth="78">
                    <DataGridTemplateColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridTemplateColumn.CellStyle>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5" 
                                        HorizontalAlignment="Right" 
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                <Button x:Name="editButton"
                                        Margin="0 0 5 0" Padding="5"
                                        VerticalAlignment="Center"
                                        Height="30"
                                        BorderThickness="1"
                                        BorderBrush="Gray"
                                        Foreground="Gray"
                                        materialDesign:ButtonAssist.CornerRadius="10"
                                        materialDesign:RippleAssist.Feedback="Gray"
                                        Style="{StaticResource MaterialDesignFlatSecondaryButton}"
                                        Click="editButton_Click">
                                    <Image>
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="Source" Value="/resources/images/edit-icon.png"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=DataContext.ThemeToggle.IsChecked, 
                                                                             RelativeSource={RelativeSource AncestorType=Page}}" Value="True">
                                                        <Setter Property="Source" Value="/resources/images/edit-icon-white.png"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                </Button>

                                <Button x:Name="deleteButton"
                                        Padding="5"
                                        VerticalAlignment="Center"
                                        Height="30"
                                        BorderThickness="1"
                                        BorderBrush="Gray"
                                        Foreground="Gray"
                                        materialDesign:ButtonAssist.CornerRadius="10"
                                        materialDesign:RippleAssist.Feedback="Gray"
                                        Style="{StaticResource MaterialDesignFlatSecondaryButton}"
                                        Click="deleteButton_Click">
                                    <Image>
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="Source" Value="/resources/images/delete-icon.png"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=DataContext.ThemeToggle.IsChecked, 
                                                                             RelativeSource={RelativeSource AncestorType=Page}}"  Value="True">
                                                        <Setter Property="Source" Value="/resources/images/delete-icon-white.png"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
